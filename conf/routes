# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET  /join                              controllers.RoomsController.joinRoom(r, u)

POST /rooms/:roomId/messages            controllers.MessagesController.createMessage(roomId: String)
GET  /rooms/:roomId/messages            controllers.MessagesController.getMessages(roomId: String)
GET /rooms/:roomId/messages/:msgId      controllers.MessagesController.getMessage(roomId: String, msgId: String)
PUT /rooms/:roomId/messages/:msgId      controllers.MessagesController.updateMessage(roomId: String, msgId: String)
DELETE /rooms/:roomId/messages/:msgId   controllers.MessagesController.deleteMessage(roomId: String, msgId: String)

POST /rooms                             controllers.RoomsController.createRoom()
GET  /rooms                             controllers.RoomsController.getRooms()
GET /test                               controllers.RoomsController.getGeoRooms(lat: Double, lng: Double)
GET /rooms/:id                          controllers.RoomsController.getRoom(id: String)
PUT /rooms/:id                          controllers.RoomsController.updateRoom(id: String)
DELETE /rooms/:id                       controllers.RoomsController.deleteRoom(id: String)

POST /users                             controllers.UsersController.createUser()
GET /users                              controllers.UsersController.getUsers()
GET /users/:id                          controllers.UsersController.getUser(id: String)
PUT /users/:id                          controllers.UsersController.updateUser(id: String)
DELETE /users/:id                       controllers.UsersController.deleteUser(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)
