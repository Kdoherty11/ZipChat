# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET /test                                    controllers.RoomsController.getGeoRooms(lat: Double, lon: Double)
GET /rooms                                   controllers.RoomsController.getRooms()
GET /rooms/:roomId/messages                  controllers.RoomsController.getMessages(roomId: String)
POST /rooms/:roomId/messages                 controllers.RoomsController.createMessage(roomId: String)
GET /join                                    controllers.RoomsController.joinRoom(r, u)
POST /rooms                                  controllers.RoomsController.createRoom()
POST /users/:userId/sendNotification         controllers.UsersController.sendNotification(userId: String)

GET /rooms/:id                               controllers.RoomsController.showRoom(id: String)
PUT /rooms/:id                               controllers.RoomsController.updateRoom(id: String)
DELETE /rooms/:id                            controllers.RoomsController.deleteRoom(id: String)

POST /users                                  controllers.UsersController.createUser()
GET /users                                   controllers.UsersController.getUsers()
GET /users/:id                               controllers.UsersController.showUser(id: String)
PUT /users/:id                               controllers.UsersController.updateUser(id: String)
DELETE /users/:id                            controllers.UsersController.deleteUser(id: String)

POST /rooms/:roomId/subscriptions            controllers.RoomsController.createSubscription(roomId: String)
GET /rooms/:roomId/subscriptions             controllers.RoomsController.getSubscriptions(roomId: String)

POST /requests                               controllers.RequestsController.createRequest()
GET /requests                                controllers.RequestsController.getRequests(u: String)
GET /requests/:id                            controllers.RequestsController.showRequest(id: String)
PUT /requests/:id                            controllers.RequestsController.updateRequest(id: String)
DELETE /requests/:id                         controllers.RequestsController.deleteRequest(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                        controllers.Assets.at(path="/public", file)

GET /init                                   controllers.BaseController.init()