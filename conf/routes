# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET /test                                    controllers.RoomsController.getGeoRooms(lat: Double, lon: Double)
GET /rooms                                   controllers.RoomsController.getRooms()
GET /rooms/:roomId/messages                  controllers.MessagesController.getMessages(roomId: Long)
POST /rooms/:roomId/messages                 controllers.MessagesController.createMessage(roomId: Long)
GET /join                                    controllers.RoomsController.joinRoom(r, u)
POST /rooms                                  controllers.RoomsController.createRoom()
POST /users/:userId/sendNotification         controllers.UsersController.sendNotification(userId: Long)

GET /rooms/:id                               controllers.RoomsController.showRoom(id: Long)
PUT /rooms/:id                               controllers.RoomsController.updateRoom(id: Long)
DELETE /rooms/:id                            controllers.RoomsController.deleteRoom(id: Long)

POST /users                                  controllers.UsersController.createUser()
GET /users                                   controllers.UsersController.getUsers()
GET /users/:id                               controllers.UsersController.showUser(id: Long)
PUT /users/:id                               controllers.UsersController.updateUser(id: Long)
DELETE /users/:id                            controllers.UsersController.deleteUser(id: Long)

#POST /rooms/:roomId/subscriptions           controllers.SubscriptionsController.createSubscription(roomId: Long)
#GET /rooms/:roomId/subscriptions            controllers.SubscriptionsController.getSubscriptions(roomId: Long)
#GET /rooms/:roomId/subscriptions/:id        controllers.SubscriptionsController.showSubscriptions(roomId: Long, id: Long)
#DELETE /rooms/:roomId/subscriptions/:id     controllers.SubscriptionController.deleteSubscription(roomId: Long, id: Long)

POST /requests                               controllers.RequestsController.createRequest()
GET /requests                                controllers.RequestsController.getRequests(u: Long)
GET /requests/:id                            controllers.RequestsController.showRequest(id: Long)
PUT /requests/:id                            controllers.RequestsController.updateRequest(id: Long)
DELETE /requests/:id                         controllers.RequestsController.deleteRequest(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                        controllers.Assets.at(path="/public", file)
